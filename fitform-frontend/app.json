{
  "expo": {
    "name": "FitForm",
    "slug": "fitform",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.fitform.app",
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "fitform"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE"
      ],
      "usesFeature": [
        {
          "name": "android.hardware.camera",
          "required": true
        },
        {
          "name": "android.hardware.camera.autofocus",
          "required": false
        },
        {
          "name": "android.hardware.sensor.accelerometer",
          "required": true
        },
        {
          "name": "android.hardware.sensor.gyroscope",
          "required": true
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FitForm to access your camera for AR body measurements and sizing features."
        }
      ],
      "expo-router",
      "./plugins/arcore-plugin",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "sdkVersion": "54.0.0",
    "scheme": "fitform",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fitform.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for AR body measurements and sizing features.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "fitform",
            "CFBundleURLSchemes": [
              "fitform"
            ]
          }
        ]
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "58025992-91da-4060-b2e3-8b123da99d7e"
      }
    },
    "owner": "jerooon"
  }
}
